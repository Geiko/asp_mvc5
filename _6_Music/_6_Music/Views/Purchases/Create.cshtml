
@model _6_Music.Models.Purchase

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<h4>Purchase</h4>
<hr />
<div class="row">
    <div class="col-md-offset-2 col-md-10">
        <h4>@ViewBag.SelectedDisk.Title</h4>
    </div>
</div>
<div class="row">
    <div class="col-md-offset-2 col-md-10">
        <img alt="Cover" src="@ViewBag.SelectedDisk.DiskUrl" />
    </div>
</div><br />
<div class="row">
    <div class="col-md-offset-2 col-md-10">
        <span>Genre: @ViewBag.SelectedGenre.Name</span>
    </div>
</div>
<div class="row">
    <div class="col-md-offset-2 col-md-10">
        <span>Artist: @ViewBag.SelectedArtist.Name</span>
    </div>
</div>
<div class="row">
    <div class="col-md-offset-2 col-md-10">
        <span>Price: $@ViewBag.SelectedDisk.Price </span>
    </div>
</div>




@using ( Html.BeginForm ( ) )
{
    @Html.AntiForgeryToken( )

    <div class="form-horizontal">

        <input type="hidden" name="selectedDiskId" value="@ViewBag.SelectedDisk.Id">





        @Html.ValidationSummary( true, "", new { @class = "text-danger" } )
        <div class="form-group">
            @Html.LabelFor( model => model.ShippingData, htmlAttributes: new { @class = "control-label col-md-2" } )
            <div class="col-md-10">
                @Html.EditorFor( model => model.ShippingData, new { htmlAttributes = new { @class = "form-control" } } )
                @Html.ValidationMessageFor( model => model.ShippingData, "", new { @class = "text-danger" } )
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Buy" class="btn btn-default" />
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink( "Back to Disks", "Index", "Disks" )
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>