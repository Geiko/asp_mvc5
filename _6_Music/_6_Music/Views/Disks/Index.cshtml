
@model _6_Music.Models.DiskListViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Disks</h2>

<p>
    @Html.ActionLink( "Create New", "Create" )
</p>

@using ( Html.BeginForm ( ) )
{
    <div class="form-inline">

        <div class="form-group">
            <label>Genre</label>
            @Html.DropDownList( "genre", Model.Genres as SelectList, htmlAttributes: new { @class = "form-control" } )
        </div>&nbsp;&nbsp;&nbsp;

        <div class="form-group">
            <label>Artist</label>
            @Html.DropDownList( "artist", Model.Artists as SelectList, htmlAttributes: new { @class = "form-control" } )
        </div>&nbsp;&nbsp;&nbsp;

        <div class="form-group">
            <label></label>
            <input type="submit" class="btn btn-success" value="Apply the Filters" />
        </div>

    </div><br />
}


<table class="table table-bordered table-hover table-striped">
    <tr class="success">
        <th>Artist</th>
        <th>Genre</th>
        <th>Album</th>
        <th>Price</th>
        <th>Buy</th>
        <th>Manage</th>
    </tr>

    @foreach ( var item in Model.Disks )
    {
        <tr>
            <td>
                @Html.DisplayFor( modelItem => item.Artist.Name )
            </td>
            <td>
                @Html.DisplayFor( modelItem => item.Genre.Name )
            </td>
            <td>
                @Html.DisplayFor( modelItem => item.Title )
            </td>
            <td>
                @Html.DisplayFor( modelItem => item.Price )
            </td>
            <td>
                <a href='@Url.Action( "Create", "Purchases", new { id = item.Id })'>
                    <img alt="Cover" src="@item.DiskUrl" width="50" height="50" />
                </a>
            </td>
            <td>
                @Html.ActionLink( "Edit", "Edit", new { id = item.Id } ) |
                @Html.ActionLink( "Details", "Details", new { id = item.Id } ) |
                @Html.ActionLink( "Delete", "Delete", new { id = item.Id } )
            </td>
        </tr>
    }

</table>