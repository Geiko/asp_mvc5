<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>

    <div>
        <nav class="navbar navbar-default navbar-inverse" style="opacity:0.8">
            <div class="container">

                <div class="navbar-header navbar-brand">
                    @Html.ActionLink( "Leather Craft", "Index", "Home", new { style = "color: aqua" } )
                </div>

                <ul class="nav navbar-nav">
                    <li id="liHome">
                        @Html.ActionLink( "Home", "Index", "Home" )
                    </li>
                    <li id="liAbout">
                        @Html.ActionLink( "Our Goods", "About", "Home" )
                    </li>
                    <li id="liContact">
                        @Html.ActionLink( "Contact Us", "Contact", "Home" )
                    </li>
                </ul>
            </div>
        </nav>
    </div>



    <div class="container body-content">
        @RenderBody()
        <hr />



        <footer>
            <p>&copy; @DateTime.Now.Year - My Application</p>
        </footer>
    </div>
</body>
</html>